<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Main_BG"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2ca5f5"
    android:gravity="fill_vertical"
    android:orientation="vertical"
    android:paddingBottom="15dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="15dp"
    tools:context="com.example.maike.flaborfit.DetailsActivity">

    <TextView
        android:id="@+id/exerciseTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Weight Lifting"
        android:textColor="#FFF"
        android:textSize="30sp" />

    <ImageView
        android:id="@+id/weightImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/weight" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rounded_corners"
        android:backgroundTint="#20000000"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top|center"
            android:text="Mark it complete"
            android:textColor="#FFF"
            android:textSize="30sp" />

        <CheckBox
            android:id="@+id/weight_checkbox1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:buttonTint="#FFF"
            android:paddingLeft="100dp"
            android:text="Complete set 1"
            android:textColor="#FFF"
            android:textSize="20sp" />

        <CheckBox
            android:id="@+id/weight_checkbox2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:buttonTint="#FFF"
            android:paddingLeft="100dp"
            android:text="Complete set 2"
            android:textColor="#FFF"
            android:textSize="20sp" />

        <CheckBox
            android:id="@+id/weight_checkbox3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:buttonTint="#FFF"
            android:paddingLeft="100dp"
            android:text="Complete set 3"
            android:textColor="#FFF"
            android:textSize="20sp" />

        <CheckBox
            android:id="@+id/weight_checkbox4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:buttonTint="#FFF"
            android:paddingLeft="100dp"
            android:text="Complete set 4"
            android:textColor="#FFF"
            android:textSize="20sp" />

        <CheckBox
            android:id="@+id/weight_checkbox5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:buttonTint="#FFF"
            android:paddingLeft="100dp"
            android:text="Complete set 5"
            android:textColor="#FFF"
            android:textSize="20sp" />

    </LinearLayout>

</LinearLayout>
